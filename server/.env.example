# Server Configuration
PORT=3000
NODE_ENV=development

# Supabase Configuration (Used for Auth and Storage)
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
SUPABASE_STORAGE_BUCKET=documents

# Azure Services (Retained)
# Document Intelligence (formerly Form Recognizer)
AZURE_FORM_RECOGNIZER_ENDPOINT=https://your-form-recognizer-resource.cognitiveservices.azure.com/
AZURE_FORM_RECOGNIZER_KEY=your_form_recognizer_key

# Azure Cognitive Search
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
AZURE_SEARCH_API_KEY=your_search_api_key
AZURE_SEARCH_INDEX_NAME=your_search_index_name

# Azure OpenAI
AZURE_OPENAI_API_KEY=your_openai_api_key
AZURE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=your_deployment_name
AZURE_OPENAI_API_VERSION=2023-05-15

# Azure Application Insights
AZURE_APP_INSIGHTS_KEY=your_app_insights_key

# Logging
LOG_LEVEL=info